{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "bun"
        ]
    },
    "include": [
        "src/**/*"
    ]
}